{
    "name": "rx-retry",
    "version": "2.0.5",
    "description": "Package for retries in RxJS, Promises and NestJS",
    "main": "lib/index.js",
    "types": "lib/index.d.ts",
    "scripts": {
        "distribute": "npm run build && npm publish",
        "build": "tsc",
        "test": "jest",
        "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
        "prepare": "npm run build",
        "prepublish": "npm run build"
    },
    "homepage": "https://github.com/Avivbens/rx-retry",
    "publisher": "Aviv Ben Shahar",
    "maintainers": [
        {
            "name": "Aviv Ben Shahar",
            "email": "avivbens87@gmail.com"
        }
    ],
    "keywords": [
        "rxjs",
        "promise",
        "nestjs",
        "retry",
        "retry-promise",
        "retry-rxjs"
    ],
    "author": "Aviv Ben Shahar",
    "license": "MIT",
    "dependencies": {
        "rxjs": "^7.5.5"
    },
    "peerDependencies": {
        "@nestjs/common": "^8.0.0"
    },
    "devDependencies": {
        "@nestjs/config": "^2.0.0",
        "@nestjs/testing": "^8.4.4",
        "@types/jest": "^27.4.1",
        "jest": "^27.5.1",
        "jest-cli": "^27.5.1",
        "ts-jest": "^27.1.4",
        "typescript": "^4.6.3"
    },
    "files": [
        "lib/**/*"
    ],
    "jest": {
        "moduleFileExtensions": [
            "js",
            "json",
            "ts"
        ],
        "rootDir": "src",
        "testRegex": ".*\\.spec\\.ts$",
        "transform": {
            "^.+\\.(t|j)s$": "ts-jest"
        },
        "collectCoverageFrom": [
            "**/*.(t|j)s"
        ],
        "coverageDirectory": "../coverage",
        "testEnvironment": "node",
        "clearMocks": true
    }
}
